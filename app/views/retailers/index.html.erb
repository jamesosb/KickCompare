<p id="notice"><%= notice %></p>

<h1>Listing Retailers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Kicks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @retailers.each do |retailer| %>
      <tr>
        <td><%= link_to retailer.name ,retailer %></td>
        <td><%= retailer.desc %></td>
        <td><%= retailer.kicks.count%> Kicks and <%= retailer.offers.count%> Offers Available</td>
        <td><%= link_to  edit_retailer_path(retailer) do%><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%end%>
          <%= link_to  retailer, method: :delete, data: { confirm: 'Are you sure?' } do%><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Retailer', new_retailer_path %>

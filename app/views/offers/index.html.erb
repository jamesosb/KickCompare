<p id="notice"><%= notice %></p>

<h1>Listing Offers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Kicks</th>
      <th>Retailers</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= link_to offer.name ,offer %></td>
        <td><%= offer.desc %></td>
        <td><%= offer.kick.name %></td>
        <td><%= offer.retailer.name %></td>
        <td><%= number_to_currency(offer.price, :unit => "Â£") %></td>

        <td><%= link_to  edit_offer_path(offer) do%><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%end%>
          <%= link_to  offer, method: :delete, data: { confirm: 'Are you sure?' } do%><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%end%></td>

      </tr>
    <% end %>
  </tbody>
</table>

